<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBarTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/bahnschrift</item>
    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar" >
        <item name="android:background">@color/appBarBackground</item>
        <item name="android:actionButtonStyle">@style/NavigationButtonStyle</item>
        <item name="android:textColorPrimary">@color/appBarTitle</item>
        <item name="toolbarNavigationButtonStyle">@style/NavigationButtonStyle</item>
    </style>

    <style name="NavigationButtonStyle" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:tint">@color/appBarTitle</item>
    </style>

</resources>
